<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카드명"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editCardName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="구분할 수 있도록 카드이름을 등록해 주세요"
                    android:maxLength="20"
                    android:maxLines="1"
                    android:nextFocusDown="@id/editCardNumber1"
                    android:textSize="12dp" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="16dp"
                android:rowCount="2">

                <TextView
                    android:layout_columnSpan="4"
                    android:text="카드번호"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editCardNumber1"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:nextFocusDown="@id/editCardNumber2"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editCardNumber2"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:nextFocusDown="@id/editCardNumber3"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editCardNumber3"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:nextFocusDown="@id/editCardNumber4"
                    android:textSize="12dp" />

                <EditText
                    android:id="@+id/editCardNumber4"
                    android:layout_columnWeight="1"
                    android:gravity="center"
                    android:hint="0000"
                    android:inputType="number"
                    android:maxLength="4"
                    android:maxLines="1"
                    android:nextFocusDown="@id/editCardExpiry1"
                    android:textSize="12dp" />
            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:padding="16dp"
                android:rowCount="1">

                <GridLayout
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="1"
                    android:columnCount="2"
                    android:rowCount="2">

                    <TextView
                        android:layout_columnSpan="2"
                        android:text="카드 유효기간"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/editCardExpiry1"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:hint="YYYY"
                        android:inputType="number"
                        android:maxLength="4"
                        android:maxLines="1"
                        android:nextFocusDown="@id/editCardExpiry2"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/editCardExpiry2"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:hint="MM"
                        android:inputType="number"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:nextFocusDown="@id/editCardPass"
                        android:textSize="12dp" />
                </GridLayout>

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="비밀번호 앞 2자리"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/editCardPass"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:gravity="center"
                        android:hint="00"
                        android:maxLength="2"
                        android:maxLines="1"
                        android:nextFocusDown="@id/editCardBirth"
                        android:textSize="12dp" />
                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="4"
                android:padding="16dp"
                android:rowCount="1">

                <TextView
                    android:layout_columnSpan="4"
                    android:text="생년월일"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/editCardBirth"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:digits="0123456789"
                    android:gravity="center"
                    android:hint="YYMMDD"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    android:textSize="12dp" />

                <Space android:layout_columnWeight="2" />
            </GridLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider" />


            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="등록하기"
                android:textColor="@color/colorPrimary"
                android:background="?android:attr/selectableItemBackground"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>